    <description>PLG_HEALTHCHECKER_MYSITESGURU_XML_DESCRIPTION</description>
    <namespace path="src">MySitesGuru\HealthChecker\Plugin\MySitesGuru</namespace>

    <files>
        <folder plugin="mysitesguru">services</folder>
        <folder>src</folder>
        <folder>language</folder>
